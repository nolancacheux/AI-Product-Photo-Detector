# ============================================
# Production Environment Variables
# AI Product Photo Detector
# ============================================

# --- Debug ---
# Never enable debug in production
DEBUG=false

# --- Logging ---
# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=WARNING

# --- Model ---
# GCS path for production model (downloaded at container build or startup)
MODEL_PATH=gs://ai-product-detector/models/best_model.pt
AIDETECT_MODEL_PATH=/app/models/checkpoints/best_model.pt

# --- API ---
API_HOST=0.0.0.0
API_PORT=8080

# --- Authentication ---
# Required in production — set API_KEYS before deploying
REQUIRE_AUTH=true
# API_KEYS=apd_your-production-key-here

# --- CORS ---
# Restrict to production domains only
ALLOWED_ORIGINS=https://ai-product-detector.example.com

# --- MLflow ---
MLFLOW_TRACKING_URI=http://mlflow:5000

# --- Service Ports ---
UI_PORT=8501
MLFLOW_PORT=5000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# --- Grafana ---
# Set strong credentials before deploying
GF_ADMIN_USER=admin
# GF_ADMIN_PASSWORD=  # REQUIRED — set a strong password
