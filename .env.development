# ============================================
# Development Environment Variables
# AI Product Photo Detector
# ============================================

# --- Debug ---
# Enable debug mode for verbose output
DEBUG=true

# --- Logging ---
# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=DEBUG

# --- Model ---
# Path to the model checkpoint (local file)
MODEL_PATH=models/checkpoints/best_model.pt
AIDETECT_MODEL_PATH=/app/models/checkpoints/best_model.pt

# --- API ---
API_HOST=0.0.0.0
API_PORT=8080

# --- Authentication ---
# Disabled in dev for easier testing
REQUIRE_AUTH=false
# API_KEYS=

# --- CORS ---
# Allow all localhost origins in dev
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8501,http://localhost:3000

# --- MLflow ---
MLFLOW_TRACKING_URI=http://localhost:5000

# --- Service Ports ---
UI_PORT=8501
MLFLOW_PORT=5000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# --- Grafana ---
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin
