# ===========================================================================
# REQUIRED — You must set these values
# ===========================================================================

# Your GCP project ID (find it: gcloud projects list)
project_id = "my-gcp-project-id"

# ===========================================================================
# RECOMMENDED — Budget alert (set to avoid surprise bills!)
# ===========================================================================

# Your billing account ID (find it: gcloud billing accounts list)
# billing_account = "XXXXXX-XXXXXX-XXXXXX"

# Monthly budget alert in EUR (default: 10€)
# budget_amount = 10

# ===========================================================================
# OPTIONAL — Override defaults if needed
# ===========================================================================

# GCP region (default: europe-west1, good for EU-based projects)
# region = "europe-west1"

# Application name (used for naming all resources)
# app_name = "ai-product-detector"

# Environment: dev, staging, or prod
# environment = "dev"

# ---------------------------------------------------------------------------
# Cloud Run tuning (defaults are fine for student projects)
# ---------------------------------------------------------------------------

# CPU allocation (1000m = 1 vCPU)
# cloud_run_cpu = "1000m"

# Memory allocation
# cloud_run_memory = "512Mi"

# Max instances (keep low to avoid costs!)
# cloud_run_max_instances = 2

# Min instances (0 = scale-to-zero, saves money)
# cloud_run_min_instances = 0

# Custom container image (leave empty to use Artifact Registry default)
# cloud_run_container_image = "europe-west1-docker.pkg.dev/my-project/ai-product-detector/ai-product-detector:v1.0.0"
